{
  "name": "rodrigos-cli",
  "version": "1.0.0",
  "description": "Rodrigo's CLI - A developer-first CLI framework that makes local commands feel native",
  "main": "dist/index.js",
  "bin": {
    "rc": "dist/bin/rc.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/bin/rc.ts --bundle --platform=node --target=node18 --outfile=dist/bin/rc.js --format=esm",
    "package": "pkg dist/bin/rc.js --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --outpath dist/",
    "dev": "tsx src/bin/rc.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build && chmod +x dist/bin/rc.js",
    "setup": "npm run build && chmod +x dist/bin/rc.js && ln -sf $(pwd)/dist/bin/rc.js ~/.local/bin/rc && echo '✅ rc CLI installed successfully! Run \"rc\" to test.'",
    "uninstall": "rm -f ~/.local/bin/rc && echo '✅ rc CLI uninstalled.'"
  },
  "keywords": [
    "cli",
    "framework",
    "extensions",
    "developer-tools"
  ],
  "author": "Rodrigo Sasaki",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "pkg": "^5.8.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
